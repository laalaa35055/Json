                        ]
                    },
                    {
                        "title": "變數搭配使用",
                        "data": [
                            {
                                "title": "搭配使用",
                                "group": true,
                                "text": "//宣告\n@mixin rect($width , $height: $width) {\n  width: $width;\n  height: $height;\n}\n\n//呼叫\n.box { @include rect(100px)\n\n}",
                                "url": null
                            },
                            {
                                "title": "輸出",
                                "group": true,
                                "text": ".box {\n  width: 100px;\n  height: 100px;\n}",
                                "url": null
                            }
                        ]
